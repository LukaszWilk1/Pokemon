@model Pokemon.Models.SimplePokemon

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="row">
            <!-- Obrazek -->
            <div class="col-md-5 text-center">
                <img src="@Model.Sprites.Other.OfficialArtwork.Front_Default"
                     alt="@Model.Name"
                     class="img-fluid rounded"
                     style="max-height: 300px;" />
            </div>

            <!-- Informacje ogÃ³lne -->
            <div class="col-md-7">
                <h2 class="text-capitalize">@Model.Name <span class="text-muted">(#@Model.Id)</span></h2>
                <p><strong>Height:</strong> @Model.Height</p>
                <p><strong>Weight:</strong> @Model.Weight</p>

                <!-- Typy -->
                <p><strong>Types:</strong></p>
                @foreach (var type in Model.Types)
                {
                    <span class="badge bg-primary me-1">@type.Type.Name</span>
                }

                <!-- Statystyki -->
                <div class="mt-4">
                    <h5>Stats</h5>
                    @foreach (var stat in Model.Stats)
                    {
                        <div class="mb-2">
                            <strong class="text-capitalize">@stat.Stat.Name</strong>
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar"
                                     style="width: @stat.Base_Stat%"
                                     aria-valuenow="@stat.Base_Stat" aria-valuemin="0" aria-valuemax="200">
                                    @stat.Base_Stat
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
